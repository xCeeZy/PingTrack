<Window x:Class="PingTrack.View.Windows.AddEditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PingTrack.View.Windows"
        mc:Ignorable="d"
        Title="Пользователь"
        WindowStartupLocation="CenterScreen"
        Width="420" Height="440"
        Background="{StaticResource WindowBrush}"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                   Text="Данные пользователя"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Foreground="{StaticResource PrimaryBrush}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

        <StackPanel Grid.Row="1" Grid.ColumnSpan="2">
            <TextBlock Text="Логин" FontSize="14" Foreground="{StaticResource TextBrush}"/>
            <TextBox x:Name="LoginBox"
                     Height="34"
                     FontSize="14"
                     VerticalContentAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="2">
            <TextBlock Text="Пароль" FontSize="14" Foreground="{StaticResource TextBrush}"/>
            <PasswordBox x:Name="PasswordBox"
                         Height="34"
                         FontSize="14"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.ColumnSpan="2">
            <TextBlock Text="ФИО" FontSize="14" Foreground="{StaticResource TextBrush}"/>
            <TextBox x:Name="FullNameBox"
                     Height="34"
                     FontSize="14"
                     VerticalContentAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    VerticalAlignment="Center" Height="64">
            <StackPanel Width="220">
                <TextBlock Text="Роль" FontSize="14" Foreground="{StaticResource TextBrush}"/>
                <ComboBox x:Name="RoleComboBox"
                          Height="36"
                          FontSize="14"
                          DisplayMemberPath="Role_Name"
                          SelectedValuePath="ID_Role"/>
            </StackPanel>

            <CheckBox x:Name="IsActiveCheckBox"
                      Content="Активен"
                      FontSize="14"
                      VerticalAlignment="Bottom"
                      Margin="24,0,0,8"/>
        </StackPanel>

        <StackPanel x:Name="PhonePanel" Grid.Row="5" Grid.ColumnSpan="2" Visibility="Collapsed">
            <TextBlock Text="Номер телефона (только для игроков)" FontSize="14" Foreground="{StaticResource TextBrush}"/>
            <TextBox x:Name="PhoneBox"
                     Height="34"
                     FontSize="14"
                     VerticalContentAlignment="Center"
                     Margin="0,0,0,10"/>
        </StackPanel>

        <Grid Grid.Row="5" Grid.ColumnSpan="2" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="SaveButton"
                    Content="Сохранить"
                    Style="{StaticResource PrimaryButton}"
                    Width="160"
                    Height="40"
                    HorizontalAlignment="Center"
                    Click="SaveButton_Click"/>

            <Button x:Name="CancelButton"
                    Grid.Column="1"
                    Content="Отмена"
                    Style="{StaticResource BaseButton}"
                    Width="140"
                    Height="40"
                    HorizontalAlignment="Center"
                    Click="CancelButton_Click"/>
        </Grid>
    </Grid>
</Window>