<Window x:Class="PingTrack.View.Windows.AddEditTrainingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PingTrack.View.Windows"
        mc:Ignorable="d"
        Title="Добавление занятия"
        WindowStartupLocation="CenterScreen"
        Width="520" Height="540"
        Background="{StaticResource WindowBrush}"
        ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="1"
                   Text="Добавление занятия"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="{StaticResource PrimaryBrush}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical">
            <TextBlock Text="Дата:" FontSize="14" Foreground="{StaticResource TextBrush}"/>
            <DatePicker x:Name="DatePickerField" Height="34" FontSize="14"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Vertical">
            <TextBlock Text="Время:" FontSize="14" Foreground="{StaticResource TextBrush}"/>
            <TextBox x:Name="TimeBox" Height="34" FontSize="14" VerticalContentAlignment="Center" ToolTip="Формат: ЧЧ:ММ"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Vertical">
            <TextBlock Text="Группа:" FontSize="14" Foreground="{StaticResource TextBrush}"/>
            <ComboBox x:Name="GroupComboBox"
                      Height="34"
                      FontSize="14"
                      DisplayMemberPath="Group_Name"
                      SelectedValuePath="ID_Group"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Vertical">
            <TextBlock Text="Тип занятия:" FontSize="14" Foreground="{StaticResource TextBrush}"/>
            <ComboBox x:Name="TypeComboBox"
                      Height="34"
                      FontSize="14"
                      DisplayMemberPath="Type_Name"
                      SelectedValuePath="ID_Type"/>
        </StackPanel>

        <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Vertical">
            <TextBlock Text="Тренер:" FontSize="14" Foreground="{StaticResource TextBrush}"/>
            <ComboBox x:Name="CoachComboBox"
                      Height="34"
                      FontSize="14"
                      DisplayMemberPath="Login"
                      SelectedValuePath="ID_User"/>
        </StackPanel>

        <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Vertical">
            <TextBlock Text="Заметка:" FontSize="14" Foreground="{StaticResource TextBrush}"/>
            <TextBox x:Name="NoteBox" Height="60" FontSize="14" VerticalContentAlignment="Top" AcceptsReturn="True" TextWrapping="Wrap"/>
        </StackPanel>

        <Grid Grid.Row="7" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="SaveButton"
                    Content="Сохранить"
                    Style="{StaticResource PrimaryButton}"
                    Width="160"
                    Height="38"
                    HorizontalAlignment="Center"
                    Click="SaveButton_Click"/>

            <Button x:Name="CancelButton"
                    Grid.Column="1"
                    Content="Отмена"
                    Style="{StaticResource BaseButton}"
                    Width="120"
                    Height="38"
                    HorizontalAlignment="Center"
                    Click="CancelButton_Click"/>
        </Grid>
    </Grid>
</Window>
