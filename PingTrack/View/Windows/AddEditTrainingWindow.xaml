<Window x:Class="PingTrack.View.Windows.AddEditTrainingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PingTrack.View.Windows"
        mc:Ignorable="d"
        Title="Добавление тренировки"
        WindowStartupLocation="CenterScreen"
        Width="520" Height="600"
        Background="{StaticResource WindowBrush}"
        ResizeMode="NoResize">

    <Grid>
        <!--#region Основная структура-->
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="40"/>
        </Grid.ColumnDefinitions>
        <!--#endregion-->

        <!--#region Заголовок-->
        <Border Grid.Row="1" Grid.Column="1"
                Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="1" Grid.Column="1"
                           Text="📅"
                           FontSize="24"
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Row="1" Grid.Column="3"
                           x:Name="TitleTextBlock"
                           Text="Добавление тренировки"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryBrush}"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
        <!--#endregion-->

        <!--#region Форма ввода-->
        <Border Grid.Row="3" Grid.Column="1"
                Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>

                <!--#region Дата и время-->
                <TextBlock Grid.Row="1" Grid.Column="1"
                           Text="Дата и время"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextBrush}"
                           VerticalAlignment="Center"/>

                <Grid Grid.Row="1" Grid.Column="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="120"/>
                    </Grid.ColumnDefinitions>

                    <DatePicker Grid.Column="0"
                                x:Name="DatePickerField"
                                Height="34"
                                FontSize="14"/>

                    <Grid Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="🕐"
                                   FontSize="16"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>

                        <TextBox Grid.Column="1"
                                 x:Name="TimeBox"
                                 Height="34"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"
                                 ToolTip="Формат: ЧЧ:ММ"/>
                    </Grid>
                </Grid>
                <!--#endregion-->

                <!--#region Группа-->
                <TextBlock Grid.Row="3" Grid.Column="1"
                           Text="Группа"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextBrush}"
                           VerticalAlignment="Center"/>

                <ComboBox Grid.Row="3" Grid.Column="3"
                          x:Name="GroupComboBox"
                          Height="34"
                          FontSize="14"
                          DisplayMemberPath="Group_Name"
                          SelectedValuePath="ID_Group"/>
                <!--#endregion-->

                <!--#region Тип занятия-->
                <TextBlock Grid.Row="5" Grid.Column="1"
                           Text="Тип занятия"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextBrush}"
                           VerticalAlignment="Center"/>

                <ComboBox Grid.Row="5" Grid.Column="3"
                          x:Name="TypeComboBox"
                          Height="34"
                          FontSize="14"
                          DisplayMemberPath="Type_Name"
                          SelectedValuePath="ID_Type"/>
                <!--#endregion-->

                <!--#region Тренер-->
                <TextBlock Grid.Row="7" Grid.Column="1"
                           Text="Тренер"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextBrush}"
                           VerticalAlignment="Center"/>

                <ComboBox Grid.Row="7" Grid.Column="3"
                          x:Name="CoachComboBox"
                          Height="34"
                          FontSize="14"
                          DisplayMemberPath="Full_Name"
                          SelectedValuePath="ID_User"/>
                <!--#endregion-->

                <!--#region Примечание-->
                <TextBlock Grid.Row="9" Grid.Column="1"
                           Text="Примечание"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextBrush}"
                           VerticalAlignment="Top"/>

                <TextBox Grid.Row="9" Grid.Column="3"
                         x:Name="NoteBox"
                         Height="80"
                         FontSize="14"
                         VerticalContentAlignment="Top"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"/>
                <!--#endregion-->
            </Grid>
        </Border>
        <!--#endregion-->

        <!--#region Кнопки действий-->
        <Border Grid.Row="7" Grid.Column="1"
                Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Row="1" Grid.Column="1"
                        x:Name="SaveButton"
                        Content="💾 Сохранить"
                        Style="{StaticResource PrimaryButton}"
                        Width="160"
                        Height="38"
                        Click="SaveButton_Click"/>

                <Button Grid.Row="1" Grid.Column="3"
                        x:Name="CancelButton"
                        Content="✖ Отмена"
                        Style="{StaticResource BaseButton}"
                        Width="120"
                        Height="38"
                        Click="CancelButton_Click"/>
            </Grid>
        </Border>
        <!--#endregion-->
    </Grid>
</Window>