<Window x:Class="PingTrack.View.Windows.AddEditAttendanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PingTrack.View.Windows"
        mc:Ignorable="d"
         Title="Отметка посещаемости"
        WindowStartupLocation="CenterScreen"
        Width="500" Height="420"
        Background="{StaticResource WindowBrush}"
        ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="1"
                   Text="Отметка посещаемости"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="{StaticResource PrimaryBrush}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical">
            <TextBlock Text="Игрок:" FontSize="14" Foreground="{StaticResource TextBrush}"/>
            <ComboBox x:Name="PlayerComboBox"
                      Height="34"
                      FontSize="14"
                      DisplayMemberPath="Full_Name"
                      SelectedValuePath="ID_Player"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Vertical">
            <TextBlock Text="Занятие:" FontSize="14" Foreground="{StaticResource TextBrush}"/>
            <ComboBox x:Name="TrainingComboBox"
                      Height="34"
                      FontSize="14"
                      DisplayMemberPath="TrainingDisplay"
                      SelectedValuePath="ID_Training"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Vertical">
            <CheckBox x:Name="IsPresentCheckBox"
                      Content="Присутствовал"
                      FontSize="14"
                      Foreground="{StaticResource TextBrush}"
                      VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Vertical">
            <TextBlock Text="Оценка (при необходимости):" FontSize="14" Foreground="{StaticResource TextBrush}"/>
            <TextBox x:Name="ScoreBox"
                     Height="34"
                     FontSize="14"
                     VerticalContentAlignment="Center"/>
        </StackPanel>

        <Grid Grid.Row="5" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="SaveButton"
                    Content="Сохранить"
                    Style="{StaticResource PrimaryButton}"
                    Width="160"
                    Height="38"
                    HorizontalAlignment="Center"
                    Click="SaveButton_Click"/>

            <Button x:Name="CancelButton"
                    Grid.Column="1"
                    Content="Отмена"
                    Style="{StaticResource BaseButton}"
                    Width="120"
                    Height="38"
                    HorizontalAlignment="Center"
                    Click="CancelButton_Click"/>
        </Grid>
    </Grid>
</Window>
