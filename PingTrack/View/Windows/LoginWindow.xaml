<Window x:Class="PingTrack.View.Windows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PingTrack.View.Windows"
        mc:Ignorable="d"
        Title="Авторизация — PingTrack"
        WindowStartupLocation="CenterScreen"
        Width="420" Height="480"
        Background="{StaticResource WindowBrush}"
        ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Grid.Column="1"
               Source="/Resources/Images/logo.png"
               Width="212"
               Height="180"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"/>

        <TextBlock Grid.Row="2" Grid.Column="1"
                   Text="Логин"
                   FontSize="15"
                   VerticalAlignment="Center"
                   Foreground="{StaticResource TextBrush}"/>

        <TextBox x:Name="LoginTextBox"
                 Grid.Row="3" Grid.Column="1"
                 Height="34"
                 BorderBrush="#33000000"
                 BorderThickness="1"
                 Background="White"
                 FontSize="14"
                 VerticalContentAlignment="Center"
                 VerticalAlignment="Center"/>

        <TextBlock Grid.Row="4" Grid.Column="1"
                   Text="Пароль"
                   FontSize="15"
                   VerticalAlignment="Center"
                   Foreground="{StaticResource TextBrush}"/>

        <Grid Grid.Row="5" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>

            <PasswordBox x:Name="PasswordBox"
                         Height="34"
                         BorderBrush="#33000000"
                         BorderThickness="1"
                         Background="White"
                         FontSize="14"
                         VerticalContentAlignment="Center"/>

            <TextBox x:Name="VisiblePasswordBox"
                     Height="34"
                     BorderBrush="#33000000"
                     BorderThickness="1"
                     Background="White"
                     FontSize="14"
                     VerticalContentAlignment="Center"
                     Visibility="Collapsed"/>

            <Button x:Name="TogglePasswordButton"
                    Grid.Column="1"
                    Width="34"
                    Height="34"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="TogglePasswordButton_Click">
                <Image x:Name="EyeIcon"
                       Width="28"
                       Height="28"
                       Source="/Resources/Images/eye_closed.png"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            </Button>
        </Grid>

        <Button x:Name="LoginButton"
                Grid.Row="6" Grid.Column="1"
                Content="Войти"
                Height="36"
                Background="{StaticResource PrimaryBrush}"
                Foreground="White"
                FontWeight="SemiBold"
                BorderThickness="0"
                Cursor="Hand"
                Click="LoginButton_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="6"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
