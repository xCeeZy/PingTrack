<Window x:Class="PingTrack.View.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PingTrack"
        mc:Ignorable="d"
       Title="PingTrack"
        WindowStartupLocation="CenterScreen"
        Width="1100" Height="680"
        Background="{StaticResource WindowBrush}"
        ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.ColumnSpan="3" Background="{StaticResource PanelBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0"
                       Source="C:\Users\rusak\source\repos\PingTrack\PingTrack\Resources\Images\logo.png"
                       Width="440"
                       Height="108"
                       Stretch="Uniform"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"/>

                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <TextBlock x:Name="UserText"
                               Text="Пользователь: —"
                               FontSize="13"
                               Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center"/>
                    <Rectangle Width="12"/>
                    <TextBlock x:Name="RoleText"
                               Text="Роль: —"
                               FontSize="13"
                               Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Grid.ColumnSpan="3" Background="#22000000"/>

        <Border Grid.Row="2" Grid.Column="0" Background="{StaticResource PanelBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Меню"
                           FontWeight="SemiBold"
                           FontSize="15"
                           Foreground="{StaticResource TextBrush}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

                <Button x:Name="DashboardBtn"
                        Grid.Row="1"
                        Style="{StaticResource NavButton}"
                        Content="Панель"
                        Click="DashboardBtn_Click"/>

                <Button x:Name="PlayersBtn"
                        Grid.Row="2"
                        Style="{StaticResource NavButton}"
                        Content="Игроки"
                        Click="PlayersBtn_Click"/>

                <Button x:Name="GroupsBtn"
                        Grid.Row="3"
                        Style="{StaticResource NavButton}"
                        Content="Группы"
                        Click="GroupsBtn_Click"/>

                <Button x:Name="TrainingsBtn"
                        Grid.Row="4"
                        Style="{StaticResource NavButton}"
                        Content="Занятия"
                        Click="TrainingsBtn_Click"/>

                <Button x:Name="JournalBtn"
                        Grid.Row="5"
                        Style="{StaticResource NavButton}"
                        Content="Журнал"
                        Click="JournalBtn_Click"/>

                <Button x:Name="ReportsBtn"
                        Grid.Row="6"
                        Style="{StaticResource NavButton}"
                        Content="Отчёты"
                        Click="ReportsBtn_Click"/>
            </Grid>
        </Border>

        <Border Grid.Row="2" Grid.Column="1" Background="#22000000"/>

        <Border Grid.Row="2" Grid.Column="2" Background="{StaticResource WindowBrush}">
            <Frame x:Name="MainFrame"
                   NavigationUIVisibility="Hidden"
                   Background="{StaticResource WindowBrush}"/>
        </Border>
    </Grid>
</Window>