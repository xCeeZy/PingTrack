<Window x:Class="PingTrack.View.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PingTrack"
        mc:Ignorable="d"
        Title="PingTrack"
        WindowStartupLocation="CenterScreen"
        Width="1100" Height="680"
        Background="{StaticResource WindowBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>
            <!-- Верхняя панель -->
            <RowDefinition Height="*"/>
            <!-- Контент -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- Боковое меню -->
            <ColumnDefinition Width="*"/>
            <!-- Основной контент -->
        </Grid.ColumnDefinitions>

        <!-- Верхняя панель -->
        <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="{StaticResource PanelBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="PingTrack"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="{StaticResource PrimaryBrush}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

            <TextBlock Grid.Column="1"
                       Text="Учёт секции настольного тенниса"
                       Foreground="{StaticResource TextBrush}"
                       FontSize="13"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Margin="0,0,16,0"/>
        </Grid>

        <!-- Левая панель -->
        <Border Grid.Row="1" Grid.Column="0" Background="{StaticResource PanelBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Меню"
                           FontWeight="SemiBold"
                           FontSize="15"
                           Foreground="{StaticResource TextBrush}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>

                <Button x:Name="DashboardBtn"
                        Grid.Row="1"
                        Style="{StaticResource NavButton}"
                        Content="Панель"
                        Click="DashboardBtn_Click"/>

                <Button x:Name="PlayersBtn"
                        Grid.Row="2"
                        Style="{StaticResource NavButton}"
                        Content="Игроки"
                        Click="PlayersBtn_Click"/>

                <Button x:Name="GroupsBtn"
                        Grid.Row="3"
                        Style="{StaticResource NavButton}"
                        Content="Группы"
                        Click="GroupsBtn_Click"/>

                <Button x:Name="TrainingsBtn"
                        Grid.Row="4"
                        Style="{StaticResource NavButton}"
                        Content="Занятия"
                        Click="TrainingsBtn_Click"/>

                <Button x:Name="JournalBtn"
                        Grid.Row="5"
                        Style="{StaticResource NavButton}"
                        Content="Журнал"
                        Click="JournalBtn_Click"/>

                <Button x:Name="ReportsBtn"
                        Grid.Row="6"
                        Style="{StaticResource NavButton}"
                        Content="Отчёты"
                        Click="ReportsBtn_Click"/>
            </Grid>
        </Border>

        <!-- Контент -->
        <Frame x:Name="MainFrame"
               Grid.Row="1" Grid.Column="1"
               NavigationUIVisibility="Hidden"
               Background="{StaticResource WindowBrush}"/>
    </Grid>
</Window>