<Window x:Class="PingTrack.View.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PingTrack"
        mc:Ignorable="d"
       Title="PingTrack"
        WindowStartupLocation="CenterScreen"
        Width="1100" Height="700"
        Background="{StaticResource WindowBrush}"
        ResizeMode="NoResize">

    <Grid Margin="8">
        <!--#region Основная сетка-->
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!--#endregion-->

        <!--#region Верхняя панель-->
        <Border Grid.Row="0" Grid.ColumnSpan="3" Background="{StaticResource PanelBrush}">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0"
                       Source="/Resources/Images/logo.png"
                       Width="300"
                       Height="125"
                       Stretch="Uniform"
                       VerticalAlignment="Center"
                       Margin="-69,0,69,0"/>

                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right">
                    <TextBlock x:Name="UserText"
                               Text="Пользователь: —"
                               FontSize="13"
                               Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center"/>
                    <Rectangle Width="12"/>
                    <TextBlock x:Name="RoleText"
                               Text="Роль: —"
                               FontSize="13"
                               Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
        <!--#endregion-->

        <!--#region Разделительная линия под шапкой-->
        <Border Grid.Row="1" Grid.ColumnSpan="3" Background="#33000000"/>
        <!--#endregion-->

        <!--#region Левая панель меню-->
        <Border Grid.Row="2" Grid.Column="0" Background="{StaticResource PanelBrush}">
            <Grid Margin="14">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Меню"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,6"/>

                <Separator Grid.Row="1" Margin="0,4"/>

                <Button x:Name="DashboardBtn"
                        Grid.Row="2"
                        Style="{StaticResource NavButton}"
                        Content="Панель"
                        Click="DashboardBtn_Click"/>

                <Button x:Name="PlayersBtn"
                        Grid.Row="3"
                        Style="{StaticResource NavButton}"
                        Content="Игроки"
                        Click="PlayersBtn_Click"/>

                <Button x:Name="GroupsBtn"
                        Grid.Row="4"
                        Style="{StaticResource NavButton}"
                        Content="Группы"
                        Click="GroupsBtn_Click"/>

                <Button x:Name="TrainingsBtn"
                        Grid.Row="5"
                        Style="{StaticResource NavButton}"
                        Content="Занятия"
                        Click="TrainingsBtn_Click"/>

                <Button x:Name="JournalBtn"
                        Grid.Row="6"
                        Style="{StaticResource NavButton}"
                        Content="Журнал"
                        Click="JournalBtn_Click"/>

                <Button x:Name="ReportsBtn"
                        Grid.Row="7"
                        Style="{StaticResource NavButton}"
                        Content="Отчёты"
                        Click="ReportsBtn_Click"/>

                <Button x:Name="UsersBtn"
                        Grid.Row="8"
                        Style="{StaticResource NavButton}"
                        Content="Пользователи"
                        Click="UsersBtn_Click"/>

                <Button x:Name="LogoutBtn"
                        Grid.Row="10"
                        Style="{StaticResource BaseButton}"
                        Content="Выйти"
                        Width="140"
                        Height="38"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Margin="0,8,0,0"
                        Click="LogoutBtn_Click"/>
            </Grid>
        </Border>
        <!--#endregion-->

        <!--#region Разделительная линия между меню и контентом-->
        <Border Grid.Row="2" Grid.Column="1" Background="#33000000"/>
        <!--#endregion-->

        <!--#region Основной контент-->
        <Border Grid.Row="2" Grid.Column="2" Background="{StaticResource WindowBrush}">
            <Frame x:Name="MainFrame"
                   NavigationUIVisibility="Hidden"
                   Background="{StaticResource WindowBrush}"/>
        </Border>
        <!--#endregion-->
    </Grid>
</Window>
