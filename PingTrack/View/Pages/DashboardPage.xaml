<Page x:Class="PingTrack.View.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PingTrack.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Панель"
      Background="{StaticResource WindowBrush}">

    <Grid Margin="20">
        <!--#region Структура сетки-->
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="180"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!--#endregion-->

        <!--#region Заголовок-->
        <TextBlock Grid.Row="0"
                   Text="Главная панель"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="{StaticResource PrimaryBrush}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        <!--#endregion-->

        <!--#region Верхние карточки-->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Игроки -->
            <Border Grid.Column="0"
                    Background="White"
                    CornerRadius="6"
                    Padding="20"
                    BorderBrush="#22000000"
                    BorderThickness="1">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Игроков зарегистрировано"
                               FontSize="15"
                               Foreground="{StaticResource TextBrush}"
                               TextAlignment="Center"/>
                    <TextBlock x:Name="PlayersCountText"
                               Text="—"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}"
                               Margin="0,10,0,0"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Ближайшие занятия -->
            <Border Grid.Column="2"
                    Background="White"
                    CornerRadius="6"
                    Padding="20"
                    BorderBrush="#22000000"
                    BorderThickness="1">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Ближайшие занятия"
                               FontSize="15"
                               Foreground="{StaticResource TextBrush}"
                               TextAlignment="Center"/>
                    <TextBlock x:Name="UpcomingTrainingsText"
                               Text="—"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}"
                               Margin="0,10,0,0"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Средняя посещаемость -->
            <Border Grid.Column="4"
                    Background="White"
                    CornerRadius="6"
                    Padding="20"
                    BorderBrush="#22000000"
                    BorderThickness="1">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Средняя посещаемость"
                               FontSize="15"
                               Foreground="{StaticResource TextBrush}"
                               TextAlignment="Center"/>
                    <TextBlock x:Name="AverageAttendanceText"
                               Text="—"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}"
                               Margin="0,10,0,0"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
        <!--#endregion-->

        <!--#region Нижняя таблица-->
        <Border Grid.Row="2"
                Margin="0,20,0,0"
                Background="White"
                CornerRadius="6"
                Padding="12"
                BorderBrush="#22000000"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Последние тренировки"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource PrimaryBrush}"
                           VerticalAlignment="Center"
                           Margin="8,0,0,0"/>

                <DataGrid x:Name="RecentTrainingsGrid"
                          Grid.Row="1"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          ColumnHeaderHeight="36"
                          RowHeaderWidth="0"
                          GridLinesVisibility="None"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto"
                          ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Дата" Binding="{Binding Date}" Width="150"/>
                        <DataGridTextColumn Header="Группа" Binding="{Binding Group}" Width="*"/>
                        <DataGridTextColumn Header="Тип занятия" Binding="{Binding Type}" Width="200"/>
                        <DataGridTextColumn Header="Тренер" Binding="{Binding Coach}" Width="180"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
        <!--#endregion-->
    </Grid>
</Page>