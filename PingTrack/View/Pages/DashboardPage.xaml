<Page x:Class="PingTrack.View.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PingTrack.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Панель"
      Background="{StaticResource WindowBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="160"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="5"
                   Text="Главная панель"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="{StaticResource PrimaryBrush}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>

        <!-- Карточка: Игроки -->
        <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource Card}">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Игроков зарегистрировано"
                           FontSize="15"
                           Foreground="{StaticResource TextBrush}"
                           HorizontalAlignment="Center"/>
                <TextBlock x:Name="PlayersCountText"
                           Text="—"
                           FontSize="30"
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryBrush}"
                           Margin="0,8,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Карточка: Ближайшие занятия -->
        <Border Grid.Row="1" Grid.Column="2" Style="{StaticResource Card}">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Ближайшие занятия"
                           FontSize="15"
                           Foreground="{StaticResource TextBrush}"
                           HorizontalAlignment="Center"/>
                <TextBlock x:Name="UpcomingTrainingsText"
                           Text="—"
                           FontSize="30"
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryBrush}"
                           Margin="0,8,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Карточка: Средняя посещаемость -->
        <Border Grid.Row="1" Grid.Column="3" Style="{StaticResource Card}">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Средняя посещаемость"
                           FontSize="15"
                           Foreground="{StaticResource TextBrush}"
                           HorizontalAlignment="Center"/>
                <TextBlock x:Name="AverageAttendanceText"
                           Text="—"
                           FontSize="30"
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryBrush}"
                           Margin="0,8,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Блок нижней статистики -->
        <Border Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Последние тренировки"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource PrimaryBrush}"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0"/>

                <DataGrid x:Name="RecentTrainingsGrid"
                          Grid.Row="1"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          GridLinesVisibility="None"
                          HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Дата" Binding="{Binding Date}" Width="150"/>
                        <DataGridTextColumn Header="Группа" Binding="{Binding Group}" Width="*"/>
                        <DataGridTextColumn Header="Тип занятия" Binding="{Binding Type}" Width="200"/>
                        <DataGridTextColumn Header="Тренер" Binding="{Binding Coach}" Width="180"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Page>