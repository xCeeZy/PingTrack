<Page x:Class="PingTrack.View.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PingTrack.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Панель"
      Background="{StaticResource WindowBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="3"
                   Text="Главная панель"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="{StaticResource PrimaryBrush}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>

        <Border Grid.Row="1" Grid.Column="0"
                Style="{StaticResource Card}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Игроков зарегистрировано" FontSize="14"/>
                <TextBlock Text="—" FontSize="26" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Grid.Column="1"
                Style="{StaticResource Card}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Ближайшие занятия" FontSize="14"/>
                <TextBlock Text="—" FontSize="26" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Grid.Column="2"
                Style="{StaticResource Card}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Средняя посещаемость" FontSize="14"/>
                <TextBlock Text="—" FontSize="26" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" Grid.ColumnSpan="3"
                Style="{StaticResource Card}">
            <TextBlock Text="Здесь появится статистика и расписание"
                       FontSize="14"
                       FontStyle="Italic"
                       Foreground="{StaticResource TextMutedBrush}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Page>
