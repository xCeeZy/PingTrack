<Page x:Class="PingTrack.View.Pages.PlayersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PingTrack.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Игроки секции"
      Background="{StaticResource WindowBrush}">

    <Grid>
        <!--#region Основная структура-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <!--#endregion-->

        <!--#region Заголовок страницы-->
        <Border Grid.Row="0" Grid.Column="1"
                Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="1" Grid.Column="1"
                           Text="🏆"
                           FontSize="28"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Row="1" Grid.Column="3"
                            VerticalAlignment="Center">
                    <TextBlock Text="Игроки секции"
                               Style="{StaticResource SectionTitle}"/>
                    <TextBlock Text="Учёт и управление игроками настольного тенниса"
                               Style="{StaticResource SubTitle}"/>
                </StackPanel>
            </Grid>
        </Border>
        <!--#endregion-->

        <!--#region Панель фильтров-->
        <Border Grid.Row="2" Grid.Column="1"
                Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>

                <!--#region Поиск-->
                <TextBlock Grid.Row="1" Grid.Column="1"
                           Text="Поиск"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextBrush}"/>

                <Border Grid.Row="3" Grid.Column="1"
                        BorderBrush="{StaticResource StrokeStrongBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Background="White">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="35"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="🔍"
                                   FontSize="16"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="{StaticResource TextMutedBrush}"/>

                        <TextBox x:Name="SearchBox"
                                 Grid.Column="1"
                                 Height="34"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Foreground="{StaticResource TextMutedBrush}"
                                 Text="Поиск по ФИО или телефону"
                                 GotFocus="SearchBox_GotFocus"
                                 LostFocus="SearchBox_LostFocus"
                                 TextChanged="SearchBox_TextChanged"/>
                    </Grid>
                </Border>
                <!--#endregion-->

                <!--#region Фильтр по группе-->
                <TextBlock Grid.Row="1" Grid.Column="3"
                           Text="Группа"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextBrush}"/>

                <ComboBox x:Name="GroupFilter"
                          Grid.Row="3" Grid.Column="3"
                          Height="34"
                          FontSize="14"
                          VerticalContentAlignment="Center"/>
                <!--#endregion-->
            </Grid>
        </Border>
        <!--#endregion-->

        <!--#region Таблица игроков-->
        <Border Grid.Row="4" Grid.Column="1"
                Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--#region Информация о количестве-->
                <Border Grid.Row="0"
                        Background="#FFF8F9FA"
                        BorderBrush="{StaticResource StrokeBrush}"
                        BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="20"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="1"
                                   x:Name="CountTextBlock"
                                   Text="Всего игроков: 0"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextBrush}"
                                   VerticalAlignment="Center"/>

                        <Button Grid.Column="2"
                                x:Name="RefreshButton"
                                Content="🔄 Обновить"
                                Style="{StaticResource BaseButton}"
                                Width="110"
                                Height="32"
                                FontSize="13"
                                Click="RefreshButton_Click"/>
                    </Grid>
                </Border>
                <!--#endregion-->

                <!--#region DataGrid-->
                <DataGrid Grid.Row="1"
                          x:Name="PlayersDataGrid"
                          AutoGenerateColumns="False"
                          MouseDoubleClick="PlayersDataGrid_MouseDoubleClick"
                          SelectionChanged="PlayersDataGrid_SelectionChanged">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ФИО" 
                                            Binding="{Binding Full_Name}" 
                                            Width="*"
                                            MinWidth="200"/>

                        <DataGridTextColumn Header="Дата рождения" 
                                            Binding="{Binding Birth_Date, StringFormat='dd.MM.yyyy'}" 
                                            Width="140"/>

                        <DataGridTemplateColumn Header="Возраст" Width="90">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Age}"
                                               HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Телефон" 
                                            Binding="{Binding Phone}" 
                                            Width="130"/>

                        <DataGridTextColumn Header="Группа" 
                                            Binding="{Binding GroupName}" 
                                            Width="180"/>
                    </DataGrid.Columns>
                </DataGrid>
                <!--#endregion-->
            </Grid>
        </Border>
        <!--#endregion-->

        <!--#region Панель действий-->
        <Border Grid.Row="6" Grid.Column="1"
                Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>

                <!--#region Пагинация слева-->
                <Button Grid.Row="1" Grid.Column="1"
                        x:Name="PrevPageButton"
                        Content="◀ Назад"
                        Style="{StaticResource BaseButton}"
                        Width="100"
                        Height="36"
                        Click="PrevPageButton_Click"/>

                <TextBlock Grid.Row="1" Grid.Column="3"
                           x:Name="PageInfoText"
                           Text="Страница 1 из 1"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextBrush}"
                           VerticalAlignment="Center"
                           MinWidth="140"
                           TextAlignment="Center"/>

                <Button Grid.Row="1" Grid.Column="5"
                        x:Name="NextPageButton"
                        Content="Вперёд ▶"
                        Style="{StaticResource BaseButton}"
                        Width="100"
                        Height="36"
                        Click="NextPageButton_Click"/>
                <!--#endregion-->

                <!--#region Кнопки действий справа-->
                <Button Grid.Row="1" Grid.Column="7"
                        x:Name="AddPlayerButton"
                        Content="➕ Добавить"
                        Style="{StaticResource PrimaryButton}"
                        Width="140"
                        Height="36"
                        Click="AddPlayerButton_Click"/>

                <Button Grid.Row="1" Grid.Column="9"
                        x:Name="EditPlayerButton"
                        Content="✏️ Редактировать"
                        Style="{StaticResource BaseButton}"
                        Width="160"
                        Height="36"
                        IsEnabled="False"
                        Click="EditPlayerButton_Click"/>

                <Button Grid.Row="1" Grid.Column="11"
                        x:Name="DeletePlayerButton"
                        Content="🗑️ Удалить"
                        Style="{StaticResource BaseButton}"
                        Width="120"
                        Height="36"
                        IsEnabled="False"
                        Click="DeletePlayerButton_Click"/>
                <!--#endregion-->
            </Grid>
        </Border>
        <!--#endregion-->
    </Grid>
</Page>