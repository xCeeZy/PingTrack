<Page x:Class="PingTrack.View.Pages.PlayersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PingTrack.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
       Title="Игроки"
      Background="{StaticResource WindowBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="5"
                   Text="Игроки секции"
                   FontSize="22" FontWeight="Bold"
                   Foreground="{StaticResource PrimaryBrush}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

        <Border Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Style="{StaticResource Card}">
            <DataGrid x:Name="PlayersDataGrid"
                      AutoGenerateColumns="False"
                      HeadersVisibility="Column"
                      ColumnHeaderHeight="32"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      RowHeaderWidth="0"
                      GridLinesVisibility="None"
                      ItemsSource="{Binding}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ФИО" Binding="{Binding Full_Name}" Width="auto"/>
                    <DataGridTextColumn Header="Дата рождения" Binding="{Binding Birth_Date, StringFormat=d}" Width="150"/>
                    <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="150"/>
                    <DataGridTextColumn Header="Группа" Binding="{Binding Groups.Group_Name}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Grid Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="AddPlayerButton"
                    Content="Добавить игрока"
                    Style="{StaticResource PrimaryButton}"
                    Width="160" Height="36"
                    HorizontalAlignment="Center"
                    Click="AddPlayerButton_Click"/>

            <Button x:Name="DeletePlayerButton"
                    Grid.Column="1"
                    Content="Удалить"
                    Style="{StaticResource BaseButton}"
                    Width="120" Height="36"
                    HorizontalAlignment="Center"
                    Click="DeletePlayerButton_Click"/>
        </Grid>
    </Grid>
</Page>