<Page x:Class="PingTrack.View.Pages.PlayerStatsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PingTrack.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Детальная статистика игрока"
      Background="{StaticResource WindowBrush}">

    <Grid>
        <!--#region Основная структура-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <!--#endregion-->

        <!--#region Заголовок-->
        <Border Grid.Row="0" Grid.Column="1"
                Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="1" Grid.Column="1"
                           Text="📊"
                           FontSize="28"
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Row="1" Grid.Column="3"
                           Text="Детальная статистика игрока"
                           Style="{StaticResource SectionTitle}"/>

                <TextBlock Grid.Row="3" Grid.Column="3"
                           Text="Подробный анализ посещаемости и результатов"
                           Style="{StaticResource SubTitle}"/>
            </Grid>
        </Border>
        <!--#endregion-->

        <!--#region Фильтры-->
        <Border Grid.Row="2" Grid.Column="1"
                Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="1" Grid.Column="1"
                           Text="Выберите игрока"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextBrush}"/>

                <ComboBox Grid.Row="3" Grid.Column="1"
                          x:Name="PlayerComboBox"
                          DisplayMemberPath="Full_Name"
                          SelectedValuePath="ID_Player"
                          Height="34"
                          FontSize="14"/>

                <TextBlock Grid.Row="1" Grid.Column="3"
                           Text="С даты"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextBrush}"/>

                <DatePicker Grid.Row="3" Grid.Column="3"
                            x:Name="StartDatePicker"
                            Height="34"
                            FontSize="14"/>

                <TextBlock Grid.Row="1" Grid.Column="5"
                           Text="По дату"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextBrush}"/>

                <DatePicker Grid.Row="3" Grid.Column="5"
                            x:Name="EndDatePicker"
                            Height="34"
                            FontSize="14"/>

                <Button Grid.Row="3" Grid.Column="7"
                        x:Name="LoadStatsButton"
                        Content="📈 Показать"
                        Style="{StaticResource PrimaryButton}"
                        Height="34"
                        Click="LoadStatsButton_Click"/>
            </Grid>
        </Border>
        <!--#endregion-->

        <!--#region Область контента-->
        <Border Grid.Row="4" Grid.Column="1"
                Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--#region Статистика (скрыта по умолчанию)-->
                <ScrollViewer x:Name="StatsScrollViewer"
                              Visibility="Collapsed"
                              VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="5"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="20"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                        </Grid.ColumnDefinitions>

                        <!--Заголовок секции-->
                        <TextBlock Grid.Row="1" Grid.Column="1"
                                   Text="Общая информация"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextBrush}"/>

                        <!--Инфо карточки-->
                        <Grid Grid.Row="3" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0"
                                           Text="Игрок"
                                           FontSize="12"
                                           Foreground="{StaticResource TextMutedBrush}"/>
                                <TextBlock Grid.Row="2"
                                           x:Name="PlayerNameText"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextBrush}"/>
                            </Grid>

                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0"
                                           Text="Группа"
                                           FontSize="12"
                                           Foreground="{StaticResource TextMutedBrush}"/>
                                <TextBlock Grid.Row="2"
                                           x:Name="GroupNameText"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextBrush}"/>
                            </Grid>

                            <Grid Grid.Column="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0"
                                           Text="Последнее посещение"
                                           FontSize="12"
                                           Foreground="{StaticResource TextMutedBrush}"/>
                                <TextBlock Grid.Row="2"
                                           x:Name="LastAttendanceText"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextBrush}"/>
                            </Grid>
                        </Grid>

                        <!--Разделитель-->
                        <Border Grid.Row="5" Grid.Column="1"
                                Background="{StaticResource StrokeBrush}"/>

                        <!--Заголовок показателей-->
                        <TextBlock Grid.Row="7" Grid.Column="1"
                                   Text="Ключевые показатели"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextBrush}"/>

                        <!--Карточки метрик-->
                        <Grid Grid.Row="9" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!--Карточка 1-->
                            <Border Grid.Column="0"
                                    Background="#F0F7FF"
                                    CornerRadius="8">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="12"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="5"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="12"/>
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="12"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="12"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="1" Grid.Column="1"
                                               Text="Всего тренировок"
                                               FontSize="12"
                                               Foreground="{StaticResource TextMutedBrush}"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1"
                                               x:Name="TotalTrainingsText"
                                               FontSize="32"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource PrimaryBrush}"/>
                                </Grid>
                            </Border>

                            <!--Карточка 2-->
                            <Border Grid.Column="2"
                                    Background="#E8F5E9"
                                    CornerRadius="8">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="12"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="5"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="12"/>
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="12"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="12"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="1" Grid.Column="1"
                                               Text="Присутствовал"
                                               FontSize="12"
                                               Foreground="{StaticResource TextMutedBrush}"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1"
                                               x:Name="AttendedText"
                                               FontSize="32"
                                               FontWeight="Bold"
                                               Foreground="#27AE60"/>
                                </Grid>
                            </Border>

                            <!--Карточка 3-->
                            <Border Grid.Column="4"
                                    Background="#FFF3E0"
                                    CornerRadius="8">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="12"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="5"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="12"/>
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="12"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="12"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="1" Grid.Column="1"
                                               Text="Посещаемость"
                                               FontSize="12"
                                               Foreground="{StaticResource TextMutedBrush}"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1"
                                               x:Name="AttendancePercentText"
                                               FontSize="32"
                                               FontWeight="Bold"
                                               Foreground="#F39C12"/>
                                </Grid>
                            </Border>

                            <!--Карточка 4-->
                            <Border Grid.Column="6"
                                    Background="#F3E5F5"
                                    CornerRadius="8">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="12"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="5"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="12"/>
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="12"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="12"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="1" Grid.Column="1"
                                               Text="Средний балл"
                                               FontSize="12"
                                               Foreground="{StaticResource TextMutedBrush}"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1"
                                               x:Name="AvgScoreText"
                                               FontSize="32"
                                               FontWeight="Bold"
                                               Foreground="#9B59B6"/>
                                </Grid>
                            </Border>
                        </Grid>

                        <!--Разделитель-->
                        <Border Grid.Row="11" Grid.Column="1"
                                Background="{StaticResource StrokeBrush}"/>

                        <!--Заголовок доп информации-->
                        <TextBlock Grid.Row="13" Grid.Column="1"
                                   Text="Дополнительная информация"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextBrush}"/>

                        <!--Доп статистика-->
                        <Grid Grid.Row="15" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!--Левая колонка-->
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0"
                                           Text="🔥 Лучшая серия посещений"
                                           FontSize="14"
                                           Foreground="{StaticResource TextBrush}"/>
                                <TextBlock Grid.Row="2"
                                           x:Name="BestStreakText"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource PrimaryBrush}"/>

                                <TextBlock Grid.Row="4"
                                           Text="⚡ Текущая серия"
                                           FontSize="14"
                                           Foreground="{StaticResource TextBrush}"/>
                                <TextBlock Grid.Row="6"
                                           x:Name="CurrentStreakText"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Foreground="#27AE60"/>
                            </Grid>

                            <!--Правая колонка-->
                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0"
                                           Text="🏓 Предпочитаемые типы тренировок"
                                           FontSize="14"
                                           Foreground="{StaticResource TextBrush}"/>

                                <ItemsControl Grid.Row="2"
                                              x:Name="PreferredTypesList">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}"
                                                       FontSize="14"
                                                       Foreground="{StaticResource TextBrush}"
                                                       Margin="0,3,0,0"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </Grid>
                    </Grid>
                </ScrollViewer>
                <!--#endregion-->

                <!--#region Заглушка-->
                <TextBlock x:Name="PlaceholderText"
                           Text="Выберите игрока и период для просмотра статистики"
                           FontSize="16"
                           Foreground="{StaticResource TextMutedBrush}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                <!--#endregion-->
            </Grid>
        </Border>
        <!--#endregion-->
    </Grid>
</Page>