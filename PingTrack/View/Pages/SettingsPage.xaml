<Page x:Class="PingTrack.View.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PingTrack.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
       Title="Настройки"
      Background="{StaticResource WindowBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="600"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="3"
                   Text="Настройки приложения"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="{StaticResource PrimaryBrush}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

        <Border Grid.Row="1" Grid.Column="1"
                Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Тема оформления:"
                           VerticalAlignment="Center"
                           FontSize="14"/>

                <ComboBox x:Name="ThemeComboBox"
                          Grid.Row="0" Grid.Column="1"
                          Height="34"
                          VerticalAlignment="Center">
                    <ComboBoxItem Content="Светлая (по умолчанию)" IsSelected="True"/>
                    <ComboBoxItem Content="Тёмная"/>
                </ComboBox>

                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="Язык интерфейса:"
                           VerticalAlignment="Center"
                           FontSize="14"/>

                <ComboBox x:Name="LanguageComboBox"
                          Grid.Row="1" Grid.Column="1"
                          Height="34"
                          VerticalAlignment="Center">
                    <ComboBoxItem Content="Русский" IsSelected="True"/>
                    <ComboBoxItem Content="English"/>
                </ComboBox>

                <Button x:Name="SaveSettingsButton"
                        Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                        Content="Сохранить изменения"
                        Style="{StaticResource PrimaryButton}"
                        Width="220"
                        Height="36"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Page>
