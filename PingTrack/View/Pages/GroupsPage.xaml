<Page x:Class="PingTrack.View.Pages.GroupsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PingTrack.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Группы"
      Background="{StaticResource WindowBrush}">

    <Grid>
        <!--#region Основная структура-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <!--#endregion-->

        <!--#region Заголовок страницы-->
        <Border Grid.Row="0" Grid.Column="1"
                Style="{StaticResource Card}"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="🏓"
                           FontSize="28"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="2"
                            VerticalAlignment="Center">
                    <TextBlock Text="Группы секции"
                               Style="{StaticResource SectionTitle}"/>
                    <TextBlock Text="Управление тренировочными группами и распределение по уровням"
                               Style="{StaticResource SubTitle}"
                               Margin="0,3,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
        <!--#endregion-->

        <!--#region Панель фильтров-->
        <Border Grid.Row="2" Grid.Column="1"
                Style="{StaticResource Card}"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="220"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!--#region Поиск-->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Поиск"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextBrush}"/>

                <Border Grid.Row="2" Grid.Column="0"
                        BorderBrush="{StaticResource StrokeStrongBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Background="White">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="35"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="🔍"
                                   FontSize="16"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="{StaticResource TextMutedBrush}"/>

                        <TextBox x:Name="SearchBox"
                                 Grid.Column="1"
                                 Height="34"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Foreground="{StaticResource TextMutedBrush}"
                                 Text="Поиск по названию группы"
                                 GotFocus="SearchBox_GotFocus"
                                 LostFocus="SearchBox_LostFocus"
                                 TextChanged="SearchBox_TextChanged"/>
                    </Grid>
                </Border>
                <!--#endregion-->

                <!--#region Фильтр по тренеру-->
                <TextBlock Grid.Row="0" Grid.Column="2"
                           Text="Тренер"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextBrush}"/>

                <ComboBox x:Name="CoachFilter"
                          Grid.Row="2" Grid.Column="2"
                          Height="34"
                          FontSize="14"
                          VerticalContentAlignment="Center"/>
                <!--#endregion-->

                <!--#region Фильтр по уровню-->
                <TextBlock Grid.Row="0" Grid.Column="4"
                           Text="Уровень подготовки"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextBrush}"/>

                <ComboBox x:Name="LevelFilter"
                          Grid.Row="2" Grid.Column="4"
                          Height="34"
                          FontSize="14"
                          VerticalContentAlignment="Center"/>
                <!--#endregion-->
            </Grid>
        </Border>
        <!--#endregion-->

        <!--#region Таблица групп-->
        <Border Grid.Row="4" Grid.Column="1"
                Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--#region Информация о количестве-->
                <Border Grid.Row="0"
                        Background="#FFF8F9FA"
                        BorderBrush="{StaticResource StrokeBrush}"
                        BorderThickness="0,0,0,1"
                        Padding="20,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   x:Name="CountTextBlock"
                                   Text="Всего групп: 0"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextBrush}"
                                   VerticalAlignment="Center"/>

                        <Button Grid.Column="1"
                                x:Name="RefreshButton"
                                Content="🔄 Обновить"
                                Style="{StaticResource BaseButton}"
                                Width="110"
                                Height="32"
                                FontSize="13"
                                Click="RefreshButton_Click"/>
                    </Grid>
                </Border>
                <!--#endregion-->

                <!--#region DataGrid-->
                <DataGrid Grid.Row="1"
                          x:Name="GroupsDataGrid"
                          AutoGenerateColumns="False"
                          MouseDoubleClick="GroupsDataGrid_MouseDoubleClick"
                          SelectionChanged="GroupsDataGrid_SelectionChanged">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Название группы" 
                                            Binding="{Binding Name}" 
                                            Width="*"
                                            MinWidth="180"/>

                        <DataGridTextColumn Header="Тренер" 
                                            Binding="{Binding Coach}" 
                                            Width="220"/>

                        <DataGridTextColumn Header="Уровень подготовки" 
                                            Binding="{Binding Level}" 
                                            Width="200"/>

                        <DataGridTemplateColumn Header="Игроков" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="#F0F7FF"
                                            CornerRadius="10"
                                            Padding="8,4"
                                            HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding PlayerCount}"
                                                   Foreground="{StaticResource PrimaryBrush}"
                                                   FontSize="13"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <!--#endregion-->
            </Grid>
        </Border>
        <!--#endregion-->

        <!--#region Панель действий-->
        <Border Grid.Row="6" Grid.Column="1"
                Style="{StaticResource Card}"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           x:Name="SelectionInfoTextBlock"
                           Text="Выберите группу для редактирования или удаления"
                           FontSize="13"
                           Foreground="{StaticResource TextMutedBrush}"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="2"
                        x:Name="AddGroupButton"
                        Content="➕ Добавить группу"
                        Style="{StaticResource PrimaryButton}"
                        Width="170"
                        Height="36"
                        Click="AddGroupButton_Click"/>

                <Button Grid.Column="4"
                        x:Name="EditGroupButton"
                        Content="✏️ Редактировать"
                        Style="{StaticResource BaseButton}"
                        Width="160"
                        Height="36"
                        IsEnabled="False"
                        Click="EditGroupButton_Click"/>

                <Button Grid.Column="6"
                        x:Name="DeleteGroupButton"
                        Content="🗑️ Удалить"
                        Style="{StaticResource BaseButton}"
                        Width="120"
                        Height="36"
                        IsEnabled="False"
                        Click="DeleteGroupButton_Click"/>
            </Grid>
        </Border>
        <!--#endregion-->
    </Grid>
</Page>