<Page x:Class="PingTrack.View.Pages.GroupsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PingTrack.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Группы"
      Background="{StaticResource WindowBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="5"
                   Text="Группы секции"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="{StaticResource PrimaryBrush}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>

        <Border Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3"
                Style="{StaticResource Card}">
            <DataGrid x:Name="GroupsDataGrid"
                      AutoGenerateColumns="False"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Название группы" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Тренер" Binding="{Binding Coach}" Width="200"/>
                    <DataGridTextColumn Header="Количество игроков" Binding="{Binding PlayerCount}" Width="180"/>
                    <DataGridTextColumn Header="Уровень подготовки" Binding="{Binding Level}" Width="180"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Button x:Name="AddGroupButton"
                Grid.Row="2" Grid.Column="2"
                Content="Добавить группу"
                Style="{StaticResource PrimaryButton}"
                Width="160"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>

        <Button x:Name="DeleteGroupButton"
                Grid.Row="2" Grid.Column="3"
                Content="Удалить"
                Style="{StaticResource BaseButton}"
                Width="120"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>
    </Grid>
</Page>
