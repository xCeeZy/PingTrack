<Page x:Class="PingTrack.View.Pages.GroupsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PingTrack.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Группы"
      Background="{StaticResource WindowBrush}">

    <Grid Margin="20">
        <!--#region Структура сетки-->
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        <!--#endregion-->

        <!--#region Заголовок-->
        <TextBlock Grid.Row="0"
                   Text="Группы секции"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="{StaticResource PrimaryBrush}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        <!--#endregion-->

        <!--#region Таблица групп-->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="6"
                Padding="12"
                BorderBrush="#22000000"
                BorderThickness="1">
            <DataGrid x:Name="GroupsDataGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      ColumnHeaderHeight="36"
                      RowHeaderWidth="0"
                      GridLinesVisibility="None"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      ScrollViewer.VerticalScrollBarVisibility="Auto">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Название группы" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Тренер" Binding="{Binding Coach}" Width="200"/>
                    <DataGridTextColumn Header="Количество игроков" Binding="{Binding PlayerCount}" Width="180"/>
                    <DataGridTextColumn Header="Уровень подготовки" Binding="{Binding Level}" Width="200"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        <!--#endregion-->

        <!--#region Нижняя панель кнопок-->
        <Grid Grid.Row="2" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="AddGroupButton"
                    Grid.Column="1"
                    Content="Добавить группу"
                    Style="{StaticResource PrimaryButton}"
                    Width="180"
                    Height="38"
                    HorizontalAlignment="Right"
                    Click="AddGroupButton_Click"/>

            <Button x:Name="DeleteGroupButton"
                    Grid.Column="3"
                    Content="Удалить"
                    Style="{StaticResource BaseButton}"
                    Width="140"
                    Height="38"
                    HorizontalAlignment="Left"
                    Click="DeleteGroupButton_Click"/>
        </Grid>
        <!--#endregion-->
    </Grid>
</Page>