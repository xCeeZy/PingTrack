<Page x:Class="PingTrack.View.Pages.ReportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PingTrack.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Отчёты и статистика"
      Background="{StaticResource WindowBrush}">

    <Grid>
        <!--#region Основная структура-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <!--#endregion-->

        <!--#region Заголовок страницы-->
        <Border Grid.Row="0" Grid.Column="1"
                Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="1" Grid.Column="1"
                           Text="📊"
                           FontSize="28"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Row="1" Grid.Column="3"
                            VerticalAlignment="Center">
                    <TextBlock Text="Отчёты и статистика"
                               Style="{StaticResource SectionTitle}"/>
                    <TextBlock Text="Анализ посещаемости и активности игроков"
                               Style="{StaticResource SubTitle}"/>
                </StackPanel>
            </Grid>
        </Border>
        <!--#endregion-->

        <!--#region Панель фильтров-->
        <Border Grid.Row="2" Grid.Column="1"
                Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>

                <!--#region Тип отчёта-->
                <TextBlock Grid.Row="1" Grid.Column="1"
                           Text="Тип отчёта"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextBrush}"/>

                <ComboBox x:Name="ReportTypeComboBox"
                          Grid.Row="3" Grid.Column="1"
                          Height="34"
                          FontSize="14"
                          SelectedIndex="0"
                          SelectionChanged="ReportTypeComboBox_SelectionChanged"/>
                <!--#endregion-->

                <!--#region Группа-->
                <TextBlock Grid.Row="1" Grid.Column="3"
                           Text="Группа"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextBrush}"/>

                <ComboBox x:Name="GroupComboBox"
                          Grid.Row="3" Grid.Column="3"
                          Height="34"
                          FontSize="14"
                          DisplayMemberPath="Group_Name"
                          SelectedValuePath="ID_Group"/>
                <!--#endregion-->

                <!--#region Период-->
                <TextBlock Grid.Row="5" Grid.Column="1"
                           Text="Период"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextBrush}"/>

                <Grid Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <DatePicker Grid.Column="0"
                                x:Name="StartDatePicker"
                                Height="34"
                                FontSize="14"/>

                    <TextBlock Grid.Column="2"
                               Text="—"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextMutedBrush}"
                               VerticalAlignment="Center"/>

                    <DatePicker Grid.Column="4"
                                x:Name="EndDatePicker"
                                Height="34"
                                FontSize="14"/>
                </Grid>
                <!--#endregion-->
            </Grid>
        </Border>
        <!--#endregion-->

        <!--#region Таблица отчётов-->
        <Border Grid.Row="4" Grid.Column="1"
                Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--#region Информация о количестве-->
                <Border Grid.Row="0"
                        Background="#FFF8F9FA"
                        BorderBrush="{StaticResource StrokeBrush}"
                        BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="1"
                                   x:Name="ReportTitleTextBlock"
                                   Text="Результаты отчёта"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextBrush}"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>
                <!--#endregion-->

                <!--#region DataGrid-->
                <DataGrid Grid.Row="1"
                          x:Name="ReportsDataGrid"
                          AutoGenerateColumns="False"/>
                <!--#endregion-->
            </Grid>
        </Border>
        <!--#endregion-->

        <!--#region Панель действий-->
        <Border Grid.Row="6" Grid.Column="1"
                Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Row="1" Grid.Column="1"
                        x:Name="GenerateReportButton"
                        Content="📈 Сформировать отчёт"
                        Style="{StaticResource PrimaryButton}"
                        Width="210"
                        Height="38"
                        Click="GenerateReportButton_Click"/>

                <Button Grid.Row="1" Grid.Column="3"
                        x:Name="ClearButton"
                        Content="🔄 Очистить"
                        Style="{StaticResource BaseButton}"
                        Width="140"
                        Height="38"
                        Click="ClearButton_Click"/>
            </Grid>
        </Border>
        <!--#endregion-->
    </Grid>
</Page>