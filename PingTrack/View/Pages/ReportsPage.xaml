<Page x:Class="PingTrack.View.Pages.ReportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PingTrack.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Отчёты"
      Background="{StaticResource WindowBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="5"
                   Text="Отчёты и статистика"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="{StaticResource PrimaryBrush}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>

        <Border Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3"
                Style="{StaticResource Card}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
                <TextBlock Text="Выберите тип отчёта" Style="{StaticResource SectionTitle}" TextAlignment="Center" Margin="0,0,0,20"/>
                <ComboBox x:Name="ReportTypeComboBox" Height="34">
                    <ComboBoxItem Content="Посещаемость по игрокам"/>
                    <ComboBoxItem Content="Посещаемость по группам"/>
                    <ComboBoxItem Content="Рейтинг активности"/>
                    <ComboBoxItem Content="Общая статистика тренировок"/>
                </ComboBox>
                <Button x:Name="GenerateReportButton"
                        Content="Сформировать отчёт"
                        Style="{StaticResource PrimaryButton}"
                        Height="36"
                        Width="200"
                        Margin="0,20,0,0"
                        HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <Button x:Name="ExportButton"
                Grid.Row="2" Grid.Column="3"
                Content="Экспорт в Excel"
                Style="{StaticResource BaseButton}"
                Width="160"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>
    </Grid>
</Page>
