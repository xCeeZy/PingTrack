<Page x:Class="PingTrack.View.Pages.ReportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PingTrack.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Отчёты"
      Background="{StaticResource WindowBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="5"
                   Text="Отчёты и статистика"
                   FontSize="22" FontWeight="Bold"
                   Foreground="{StaticResource PrimaryBrush}"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Border Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="1" Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Выберите тип отчёта"
                           Style="{StaticResource SectionTitle}"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <ComboBox x:Name="ReportTypeComboBox"
                          Grid.Row="1" Height="34" VerticalAlignment="Center">
                    <ComboBoxItem Content="Посещаемость по игрокам"/>
                    <ComboBoxItem Content="Посещаемость по группам"/>
                    <ComboBoxItem Content="Рейтинг активности"/>
                    <ComboBoxItem Content="Общая статистика тренировок"/>
                </ComboBox>
                <Button x:Name="GenerateReportButton"
                        Grid.Row="2"
                        Content="Сформировать отчёт"
                        Style="{StaticResource PrimaryButton}"
                        Height="36" Width="200"
                        HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <Button x:Name="ExportButton"
                Grid.Row="2" Grid.Column="3"
                Content="Экспорт в Excel"
                Style="{StaticResource BaseButton}"
                Width="160" Height="36"
                HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Page>