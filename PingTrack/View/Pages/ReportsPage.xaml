<Page x:Class="PingTrack.View.Pages.ReportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PingTrack.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Отчёты"
      Background="{StaticResource WindowBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="84"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="1"
                   Text="Отчёты и статистика"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="{StaticResource PrimaryBrush}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

        <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource Card}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="44"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Тип отчёта:" FontSize="14" Foreground="{StaticResource TextBrush}" VerticalAlignment="Center"/>
                <ComboBox x:Name="ReportTypeComboBox" Grid.Row="1" Grid.Column="0" Height="32" FontSize="14" SelectedIndex="0">
                    <ComboBoxItem Content="Посещаемость по игрокам"/>
                    <ComboBoxItem Content="Посещаемость по группам"/>
                    <ComboBoxItem Content="Рейтинг активности"/>
                    <ComboBoxItem Content="Общая статистика тренировок"/>
                </ComboBox>

                <TextBlock Grid.Row="0" Grid.Column="2" Text="Группа:" FontSize="14" Foreground="{StaticResource TextBrush}" VerticalAlignment="Center"/>
                <ComboBox x:Name="GroupComboBox" Grid.Row="1" Grid.Column="2" Height="32" FontSize="14" DisplayMemberPath="Group_Name" SelectedValuePath="ID_Group"/>

                <TextBlock Grid.Row="0" Grid.Column="4" Text="С даты:" FontSize="14" Foreground="{StaticResource TextBrush}" VerticalAlignment="Center"/>
                <DatePicker x:Name="StartDatePicker" Grid.Row="1" Grid.Column="4" Height="32" FontSize="14"/>

                <TextBlock Grid.Row="0" Grid.Column="6" Text="По дату:" FontSize="14" Foreground="{StaticResource TextBrush}" VerticalAlignment="Center"/>
                <DatePicker x:Name="EndDatePicker" Grid.Row="1" Grid.Column="6" Height="32" FontSize="14"/>
            </Grid>
        </Border>

        <Border Grid.Row="2" Grid.Column="1" Style="{StaticResource Card}">
            <DataGrid x:Name="ReportsDataGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      ColumnHeaderHeight="32"
                      RowHeaderWidth="0"
                      GridLinesVisibility="None"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Группа" Binding="{Binding Group}" Width="auto"/>
                    <DataGridTextColumn Header="Всего занятий" Binding="{Binding TotalTrainings}" Width="160"/>
                    <DataGridTextColumn Header="Присутствий" Binding="{Binding PresentCount}" Width="140"/>
                    <DataGridTextColumn Header="Посещаемость (%)" Binding="{Binding AttendancePercent}" Width="180"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Grid Grid.Row="3" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="32"/>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="GenerateReportButton"
                    Grid.Column="1"
                    Content="Сформировать отчёт"
                    Style="{StaticResource PrimaryButton}"
                    Height="38"/>

            <Button x:Name="ExportButton"
                    Grid.Column="3"
                    Content="Экспорт в Excel"
                    Style="{StaticResource BaseButton}"
                    Height="38"/>
        </Grid>
    </Grid>
</Page>