<Page x:Class="PingTrack.View.Pages.PlayerDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:PingTrack.View.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Личный кабинет игрока"
      Background="{StaticResource WindowBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <!--#region Основная структура-->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>
            <!--#endregion-->

            <!--#region Заголовок страницы-->
            <Border Grid.Row="0" Grid.Column="1"
                    Style="{StaticResource Card}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="15"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="15"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="1" Grid.Column="1"
                               Text="👤"
                               FontSize="28"
                               VerticalAlignment="Center"/>

                    <StackPanel Grid.Row="1" Grid.Column="3"
                                VerticalAlignment="Center">
                        <TextBlock x:Name="PlayerFullNameText"
                                   Text="Личный кабинет"
                                   Style="{StaticResource SectionTitle}"/>
                        <TextBlock x:Name="PlayerGroupText"
                                   Text="Группа: -"
                                   Style="{StaticResource SubTitle}"/>
                    </StackPanel>

                    <Button Grid.Row="1" Grid.Column="4"
                            x:Name="RefreshButton"
                            Content="🔄 Обновить"
                            Style="{StaticResource BaseButton}"
                            Width="110"
                            Height="32"
                            FontSize="13"
                            Click="RefreshButton_Click"/>
                </Grid>
            </Border>
            <!--#endregion-->

            <!--#region Карточки статистики-->
            <Grid Grid.Row="2" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--#region Карточка: Посещаемость-->
                <Border Grid.Column="0" Style="{StaticResource Card}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="15"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="15"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="1" Grid.Column="1"
                           Text="📊"
                           FontSize="24"
                           HorizontalAlignment="Center"/>

                        <StackPanel Grid.Row="3" Grid.Column="1">
                            <TextBlock Text="Моя посещаемость"
                               FontSize="12"
                               Foreground="{StaticResource TextMutedBrush}"
                               TextAlignment="Center"
                               TextWrapping="Wrap"/>
                            <TextBlock x:Name="AttendancePercentText"
                               Text="0%"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}"
                               TextAlignment="Center"
                               Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
                <!--#endregion-->

                <!--#region Карточка: Тренировки-->
                <Border Grid.Column="2" Style="{StaticResource Card}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="15"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="15"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="1" Grid.Column="1"
                           Text="🏓"
                           FontSize="24"
                           HorizontalAlignment="Center"/>

                        <StackPanel Grid.Row="3" Grid.Column="1">
                            <TextBlock Text="Посещено тренировок"
                               FontSize="12"
                               Foreground="{StaticResource TextMutedBrush}"
                               TextAlignment="Center"
                               TextWrapping="Wrap"/>
                            <TextBlock x:Name="TotalTrainingsText"
                               Text="0"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="#27AE60"
                               TextAlignment="Center"
                               Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
                <!--#endregion-->

                <!--#region Карточка: Средняя оценка-->
                <Border Grid.Column="4" Style="{StaticResource Card}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="15"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="15"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="1" Grid.Column="1"
                           Text="⭐"
                           FontSize="24"
                           HorizontalAlignment="Center"/>

                        <StackPanel Grid.Row="3" Grid.Column="1">
                            <TextBlock Text="Средняя оценка"
                               FontSize="12"
                               Foreground="{StaticResource TextMutedBrush}"
                               TextAlignment="Center"
                               TextWrapping="Wrap"/>
                            <TextBlock x:Name="AverageScoreText"
                               Text="-"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="#F39C12"
                               TextAlignment="Center"
                               Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
                <!--#endregion-->
            </Grid>
            <!--#endregion-->

            <!--#region Мои тренировки-->
            <Border Grid.Row="4" Grid.Column="1"
                    Style="{StaticResource Card}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--#region Заголовок таблицы-->
                    <Border Grid.Row="0"
                            Background="#FFF8F9FA"
                            BorderBrush="{StaticResource StrokeBrush}"
                            BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="1"
                                       Text="📋 Мои последние тренировки"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextBrush}"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    <!--#endregion-->

                    <!--#region DataGrid-->
                    <DataGrid Grid.Row="1"
                              x:Name="MyTrainingsGrid"
                              AutoGenerateColumns="False">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Дата и время"
                                                Binding="{Binding DateTime}"
                                                Width="160"/>

                            <DataGridTextColumn Header="Тип занятия"
                                                Binding="{Binding Type}"
                                                Width="*"
                                                MinWidth="200"/>

                            <DataGridTextColumn Header="Тренер"
                                                Binding="{Binding Coach}"
                                                Width="200"/>

                            <DataGridTemplateColumn Header="Присутствие" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="{Binding PresenceBg}"
                                                CornerRadius="10"
                                                HorizontalAlignment="Center">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="8"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="8"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="4"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="4"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Row="1" Grid.Column="1"
                                                           Text="{Binding Presence}"
                                                           Foreground="{Binding PresenceColor}"
                                                           FontSize="13"
                                                           FontWeight="Bold"
                                                           HorizontalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Оценка"
                                                Binding="{Binding Score}"
                                                Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <!--#endregion-->
                </Grid>
            </Border>
            <!--#endregion-->

            <!--#region График посещаемости-->
            <Border Grid.Row="6" Grid.Column="1"
                    Style="{StaticResource Card}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>

                    <!--#region Заголовок-->
                    <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                            Background="#FFF8F9FA"
                            BorderBrush="{StaticResource StrokeBrush}"
                            BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="1"
                                       Text="📈 Моя динамика посещаемости за последние 6 месяцев"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextBrush}"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    <!--#endregion-->

                    <!--#region Область графика-->
                    <ScrollViewer Grid.Row="1" Grid.Column="1"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="20"/>
                            </Grid.RowDefinitions>

                            <ItemsControl Grid.Row="1"
                                          x:Name="AttendanceChartItems">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Height="60">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="5"/>
                                                <RowDefinition Height="20"/>
                                            </Grid.RowDefinitions>

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="60"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Row="0" Grid.Column="0"
                                                       Text="{Binding MonthName}"
                                                       FontSize="13"
                                                       FontWeight="SemiBold"
                                                       Foreground="{StaticResource TextBrush}"
                                                       VerticalAlignment="Center"/>

                                            <Border Grid.Row="0" Grid.Column="1"
                                                    Background="{StaticResource PrimaryBrush}"
                                                    Height="24"
                                                    HorizontalAlignment="Left"
                                                    CornerRadius="4"
                                                    Width="{Binding BarWidth}"/>

                                            <TextBlock Grid.Row="0" Grid.Column="2"
                                                       Text="{Binding PercentText}"
                                                       FontSize="13"
                                                       FontWeight="Bold"
                                                       Foreground="{StaticResource PrimaryBrush}"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Right"/>

                                            <Rectangle Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                                                       Height="1"
                                                       Fill="{StaticResource StrokeBrush}"/>

                                            <TextBlock Grid.Row="2" Grid.Column="1"
                                                       Text="{Binding DetailText}"
                                                       FontSize="11"
                                                       Foreground="{StaticResource TextMutedBrush}"
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </ScrollViewer>
                    <!--#endregion-->
                </Grid>
            </Border>
            <!--#endregion-->
        </Grid>
    </ScrollViewer>
</Page>
