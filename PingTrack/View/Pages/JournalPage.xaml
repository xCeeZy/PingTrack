<Page x:Class="PingTrack.View.Pages.JournalPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PingTrack.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Журнал посещаемости"
      Background="{StaticResource WindowBrush}">

    <Grid>
        <!--#region Основная структура-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <!--#endregion-->

        <!--#region Заголовок страницы-->
        <Border Grid.Row="0" Grid.Column="1"
                Style="{StaticResource Card}"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="📋"
                           FontSize="28"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="2"
                            VerticalAlignment="Center">
                    <TextBlock Text="Журнал посещаемости"
                               Style="{StaticResource SectionTitle}"/>
                    <TextBlock Text="Учёт присутствия игроков на тренировках"
                               Style="{StaticResource SubTitle}"
                               Margin="0,3,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
        <!--#endregion-->

        <!--#region Панель фильтров-->
        <Border Grid.Row="2" Grid.Column="1"
                Style="{StaticResource Card}"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!--#region Поиск по игроку-->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Поиск"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextBrush}"/>

                <Border Grid.Row="2" Grid.Column="0"
                        BorderBrush="{StaticResource StrokeStrongBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Background="White">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="35"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="🔍"
                                   FontSize="16"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="{StaticResource TextMutedBrush}"/>

                        <TextBox x:Name="SearchBox"
                                 Grid.Column="1"
                                 Height="34"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Foreground="{StaticResource TextMutedBrush}"
                                 Text="Поиск по игроку"
                                 GotFocus="SearchBox_GotFocus"
                                 LostFocus="SearchBox_LostFocus"
                                 TextChanged="SearchBox_TextChanged"/>
                    </Grid>
                </Border>
                <!--#endregion-->

                <!--#region Фильтр по группе-->
                <TextBlock Grid.Row="0" Grid.Column="2"
                           Text="Группа"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextBrush}"/>

                <ComboBox x:Name="GroupFilter"
                          Grid.Row="2" Grid.Column="2"
                          Height="34"
                          FontSize="14"
                          VerticalContentAlignment="Center"/>
                <!--#endregion-->

                <!--#region Фильтр по присутствию-->
                <TextBlock Grid.Row="0" Grid.Column="4"
                           Text="Присутствие"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextBrush}"/>

                <ComboBox x:Name="PresenceFilter"
                          Grid.Row="2" Grid.Column="4"
                          Height="34"
                          FontSize="14"
                          VerticalContentAlignment="Center"/>
                <!--#endregion-->
            </Grid>
        </Border>
        <!--#endregion-->

        <!--#region Таблица журнала-->
        <Border Grid.Row="4" Grid.Column="1"
                Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--#region Информация о количестве-->
                <Border Grid.Row="0"
                        Background="#FFF8F9FA"
                        BorderBrush="{StaticResource StrokeBrush}"
                        BorderThickness="0,0,0,1"
                        Padding="20,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   x:Name="CountTextBlock"
                                   Text="Всего записей: 0"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextBrush}"
                                   VerticalAlignment="Center"/>

                        <Button Grid.Column="1"
                                x:Name="RefreshButton"
                                Content="🔄 Обновить"
                                Style="{StaticResource BaseButton}"
                                Width="110"
                                Height="32"
                                FontSize="13"
                                Click="RefreshButton_Click"/>
                    </Grid>
                </Border>
                <!--#endregion-->

                <!--#region DataGrid-->
                <DataGrid Grid.Row="1"
                          x:Name="JournalDataGrid"
                          AutoGenerateColumns="False"
                          MouseDoubleClick="JournalDataGrid_MouseDoubleClick"
                          SelectionChanged="JournalDataGrid_SelectionChanged">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Дата" 
                                            Binding="{Binding Date}" 
                                            Width="120"/>

                        <DataGridTextColumn Header="Игрок" 
                                            Binding="{Binding Player}" 
                                            Width="*"
                                            MinWidth="180"/>

                        <DataGridTextColumn Header="Группа" 
                                            Binding="{Binding Group}" 
                                            Width="150"/>

                        <DataGridTextColumn Header="Тип тренировки" 
                                            Binding="{Binding Training}" 
                                            Width="180"/>

                        <DataGridTextColumn Header="Присутствие" 
                                            Binding="{Binding IsPresent}" 
                                            Width="130">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="13"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsPresent}" Value="True">
                                            <Setter Property="Text" Value="✓ Присутствовал"/>
                                            <Setter Property="Foreground" Value="#27AE60"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsPresent}" Value="False">
                                            <Setter Property="Text" Value="✗ Отсутствовал"/>
                                            <Setter Property="Foreground" Value="#E74C3C"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <!--#endregion-->
            </Grid>
        </Border>
        <!--#endregion-->

        <!--#region Панель действий-->
        <Border Grid.Row="6" Grid.Column="1"
        Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>

                <!--#region Пагинация слева-->
                <Button Grid.Row="1" Grid.Column="1"
                x:Name="PrevPageButton"
                Content="◀ Назад"
                Style="{StaticResource BaseButton}"
                Width="100"
                Height="36"
                Click="PrevPageButton_Click"/>

                <TextBlock Grid.Row="1" Grid.Column="3"
                   x:Name="PageInfoText"
                   Text="Страница 1 из 1"
                   FontSize="13"
                   FontWeight="SemiBold"
                   Foreground="{StaticResource TextBrush}"
                   VerticalAlignment="Center"
                   MinWidth="140"
                   TextAlignment="Center"/>

                <Button Grid.Row="1" Grid.Column="5"
                x:Name="NextPageButton"
                Content="Вперёд ▶"
                Style="{StaticResource BaseButton}"
                Width="100"
                Height="36"
                Click="NextPageButton_Click"/>
                <!--#endregion-->

                <!--#region Кнопки действий справа-->
                <Button Grid.Row="1" Grid.Column="7"
                x:Name="AddButton"
                Content="➕ Добавить"
                Style="{StaticResource PrimaryButton}"
                Width="140"
                Height="36"
                Click="AddButton_Click"/>

                <Button Grid.Row="1" Grid.Column="9"
                x:Name="DeleteButton"
                Content="🗑️ Удалить"
                Style="{StaticResource BaseButton}"
                Width="120"
                Height="36"
                IsEnabled="False"
                Click="DeleteButton_Click"/>
                <!--#endregion-->
            </Grid>
        </Border>
        <!--#endregion-->
    </Grid>
</Page>