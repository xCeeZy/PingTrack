<Page x:Class="PingTrack.View.Pages.JournalPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PingTrack.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Журнал"
      Background="{StaticResource WindowBrush}">

    <Grid Margin="20">
        <!--#region Структура сетки-->
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!--#endregion-->

        <!--#region Заголовок-->
        <TextBlock Grid.Row="0"
                   Text="Журнал посещаемости"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="{StaticResource PrimaryBrush}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        <!--#endregion-->

        <!--#region Таблица-->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="6"
                Padding="10"
                BorderBrush="#22000000"
                BorderThickness="1">
            <DataGrid x:Name="JournalDataGrid"
                      AutoGenerateColumns="False"
                      HeadersVisibility="Column"
                      ColumnHeaderHeight="36"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      RowHeaderWidth="0"
                      GridLinesVisibility="None"
                      VerticalAlignment="Stretch"
                      HorizontalAlignment="Stretch"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      ScrollViewer.VerticalScrollBarVisibility="Auto">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Дата" Binding="{Binding Date}" Width="130"/>
                    <DataGridTextColumn Header="Игрок" Binding="{Binding Player}" Width="220"/>
                    <DataGridTextColumn Header="Группа" Binding="{Binding Group}" Width="180"/>
                    <DataGridTextColumn Header="Занятие" Binding="{Binding Training}" Width="220"/>
                    <DataGridCheckBoxColumn Header="Присутствие" Binding="{Binding IsPresent}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        <!--#endregion-->

        <!--#region Нижняя панель управления-->
        <Grid Grid.Row="2" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Левая навигация -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <Button x:Name="PrevPageButton"
                        Content="Назад"
                        Style="{StaticResource BaseButton}"
                        Width="100" Height="34"/>
                <TextBlock x:Name="PageInfoText"
                           Text="Страница 1 из 1"
                           FontSize="13"
                           Foreground="{StaticResource TextBrush}"
                           VerticalAlignment="Center"
                           Margin="12,0,12,0"/>
                <Button x:Name="NextPageButton"
                        Content="Вперёд"
                        Style="{StaticResource BaseButton}"
                        Width="100" Height="34"/>
            </StackPanel>

            <!-- Правая панель -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button x:Name="AddRecordButton"
                        Content="Добавить запись"
                        Style="{StaticResource PrimaryButton}"
                        Width="160" Height="36"
                        Margin="0,0,12,0"/>
                <Button x:Name="DeleteRecordButton"
                        Content="Удалить"
                        Style="{StaticResource BaseButton}"
                        Width="120" Height="36"/>
            </StackPanel>
        </Grid>
        <!--#endregion-->
    </Grid>
</Page>