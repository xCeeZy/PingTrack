<Page x:Class="PingTrack.View.Pages.JournalPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PingTrack.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
       Title="Журнал"
      Background="{StaticResource WindowBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="5"
                   Text="Журнал посещаемости"
                   FontSize="22" FontWeight="Bold"
                   Foreground="{StaticResource PrimaryBrush}"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Border Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Style="{StaticResource Card}">
            <DataGrid x:Name="JournalDataGrid"
                      AutoGenerateColumns="False"
                      HeadersVisibility="Column"
                      ColumnHeaderHeight="32"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      RowHeaderWidth="0"
                      GridLinesVisibility="None"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Дата" Binding="{Binding Date}" Width="150"/>
                    <DataGridTextColumn Header="Игрок" Binding="{Binding Player}" Width="*"/>
                    <DataGridTextColumn Header="Группа" Binding="{Binding Group}" Width="200"/>
                    <DataGridTextColumn Header="Занятие" Binding="{Binding Training}" Width="200"/>
                    <DataGridCheckBoxColumn Header="Присутствие" Binding="{Binding IsPresent}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Grid Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="AddRecordButton"
                    Content="Добавить запись"
                    Style="{StaticResource PrimaryButton}"
                    Width="160" Height="36"
                    HorizontalAlignment="Center"/>
            <Button x:Name="DeleteRecordButton"
                    Grid.Column="1"
                    Content="Удалить"
                    Style="{StaticResource BaseButton}"
                    Width="120" Height="36"
                    HorizontalAlignment="Center"/>
        </Grid>
    </Grid>
</Page>