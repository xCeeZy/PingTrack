<Page x:Class="PingTrack.View.Pages.UsersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PingTrack.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
            Title="Учёт пользователей"
      Background="{StaticResource WindowBrush}">

    <Grid Margin="20">

        <!--#region Сетка страницы -->
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <!--#endregion-->

        <!--#region Заголовок -->
        <TextBlock Grid.Row="0"
                   Text="Учёт пользователей"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="{StaticResource PrimaryBrush}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        <!--#endregion-->

        <!--#region Поиск и фильтр -->
        <Grid Grid.Row="1" Margin="0 10 0 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="SearchBox"
                     Grid.Column="0"
                     Height="34"
                     FontSize="14"
                     VerticalContentAlignment="Center"
                     Foreground="Gray"
                     Text="Поиск по логину или ФИО"
                     GotFocus="SearchBox_GotFocus"
                     LostFocus="SearchBox_LostFocus"/>

            <ComboBox x:Name="RoleFilter"
                      Grid.Column="1"
                      Height="30"
                      FontSize="14"
                      VerticalContentAlignment="Center"
                      HorizontalAlignment="Right"/>

            <Button x:Name="SearchButton"
                    Grid.Column="2"
                    Content="Найти"
                    Style="{StaticResource BaseButton}"
                    Width="100"
                    Height="30"
                    Margin="10 0 0 0"/>
        </Grid>
        <!--#endregion-->

        <!--#region Таблица -->
        <Border Grid.Row="2" Style="{StaticResource Card}">
            <DataGrid x:Name="UsersDataGrid"
                      AutoGenerateColumns="False"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      RowHeaderWidth="0"
                      GridLinesVisibility="None"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Логин" Binding="{Binding Login}" Width="150"/>
                    <DataGridTextColumn Header="Роль" Binding="{Binding Roles.Role_Name}" Width="120"/>
                    <DataGridTextColumn Header="ФИО" Binding="{Binding Full_Name}" Width="*"/>
                    <DataGridCheckBoxColumn Header="Активен" Binding="{Binding IsActive}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        <!--#endregion-->

        <!--#region Кнопки управления -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="AddUserButton"
                    Content="Добавить"
                    Style="{StaticResource PrimaryButton}"
                    Width="140"
                    Height="36"
                    HorizontalAlignment="Center"/>

            <Button x:Name="EditUserButton"
                    Grid.Column="1"
                    Content="Редактировать"
                    Style="{StaticResource BaseButton}"
                    Width="140"
                    Height="36"
                    HorizontalAlignment="Center"/>

            <Button x:Name="DeleteUserButton"
                    Grid.Column="2"
                    Content="Удалить"
                    Style="{StaticResource BaseButton}"
                    Width="140"
                    Height="36"
                    HorizontalAlignment="Center"/>
        </Grid>
        <!--#endregion-->

    </Grid>
</Page>