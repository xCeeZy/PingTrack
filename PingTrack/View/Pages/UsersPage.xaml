<Page x:Class="PingTrack.View.Pages.UsersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PingTrack.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Учёт пользователей"
      Background="{StaticResource WindowBrush}">

    <Grid>
        <!--#region Основная структура-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <!--#endregion-->

        <!--#region Заголовок страницы-->
        <Border Grid.Row="0" Grid.Column="1"
                Style="{StaticResource Card}"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="👥"
                           FontSize="28"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="2"
                            VerticalAlignment="Center">
                    <TextBlock Text="Управление пользователями"
                               Style="{StaticResource SectionTitle}"/>
                    <TextBlock Text="Добавление, редактирование и удаление пользователей системы"
                               Style="{StaticResource SubTitle}"
                               Margin="0,3,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
        <!--#endregion-->

        <!--#region Панель фильтров и поиска-->
        <Border Grid.Row="2" Grid.Column="1"
                Style="{StaticResource Card}"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="250"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!--#region Поле поиска-->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Поиск"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextBrush}"/>

                <Border Grid.Row="2" Grid.Column="0"
                        BorderBrush="{StaticResource StrokeStrongBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Background="White">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="35"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="🔍"
                                   FontSize="16"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="{StaticResource TextMutedBrush}"/>

                        <TextBox x:Name="SearchBox"
                                 Grid.Column="1"
                                 Height="34"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Foreground="{StaticResource TextMutedBrush}"
                                 Text="Поиск по логину или ФИО"
                                 GotFocus="SearchBox_GotFocus"
                                 LostFocus="SearchBox_LostFocus"
                                 TextChanged="SearchBox_TextChanged"/>
                    </Grid>
                </Border>
                <!--#endregion-->

                <!--#region Фильтр по роли-->
                <TextBlock Grid.Row="0" Grid.Column="2"
                           Text="Роль"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextBrush}"/>

                <ComboBox x:Name="RoleFilter"
                          Grid.Row="2" Grid.Column="2"
                          Height="34"
                          FontSize="14"
                          VerticalContentAlignment="Center"/>
                <!--#endregion-->
            </Grid>
        </Border>
        <!--#endregion-->

        <!--#region Таблица пользователей-->
        <Border Grid.Row="4" Grid.Column="1"
                Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--#region Информация о количестве-->
                <Border Grid.Row="0"
                        Background="#FFF8F9FA"
                        BorderBrush="{StaticResource StrokeBrush}"
                        BorderThickness="0,0,0,1"
                        Padding="20,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   x:Name="CountTextBlock"
                                   Text="Всего пользователей: 0"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextBrush}"
                                   VerticalAlignment="Center"/>

                        <Button Grid.Column="1"
                                x:Name="RefreshButton"
                                Content="🔄 Обновить"
                                Style="{StaticResource BaseButton}"
                                Width="110"
                                Height="32"
                                FontSize="13"
                                Click="RefreshButton_Click"/>
                    </Grid>
                </Border>
                <!--#endregion-->

                <!--#region DataGrid-->
                <DataGrid Grid.Row="1"
                          x:Name="UsersDataGrid"
                          AutoGenerateColumns="False"
                          MouseDoubleClick="UsersDataGrid_MouseDoubleClick"
                          SelectionChanged="UsersDataGrid_SelectionChanged">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Логин" 
                                            Binding="{Binding Login}" 
                                            Width="180"/>

                        <DataGridTextColumn Header="ФИО" 
                                            Binding="{Binding Full_Name}" 
                                            Width="*"
                                            MinWidth="200"/>

                        <DataGridTextColumn Header="Роль" 
                                            Binding="{Binding Roles.Role_Name}" 
                                            Width="150"/>

                        <DataGridTextColumn Header="Статус" 
                                            Binding="{Binding IsActive}" 
                                            Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="13"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                            <Setter Property="Text" Value="✓ Активен"/>
                                            <Setter Property="Foreground" Value="#27AE60"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsActive}" Value="False">
                                            <Setter Property="Text" Value="✗ Неактивен"/>
                                            <Setter Property="Foreground" Value="#E74C3C"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Дата создания" 
                                            Binding="{Binding Created_At, StringFormat='dd.MM.yyyy'}" 
                                            Width="130"/>
                    </DataGrid.Columns>
                </DataGrid>
                <!--#endregion-->
            </Grid>
        </Border>
        <!--#endregion-->

        <!--#region Панель действий-->
        <Border Grid.Row="6" Grid.Column="1"
                Style="{StaticResource Card}"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           x:Name="SelectionInfoTextBlock"
                           Text="Выберите пользователя для редактирования или удаления"
                           FontSize="13"
                           Foreground="{StaticResource TextMutedBrush}"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="2"
                        x:Name="AddUserButton"
                        Content="➕ Добавить"
                        Style="{StaticResource PrimaryButton}"
                        Width="140"
                        Height="36"
                        Click="AddUserButton_Click"/>

                <Button Grid.Column="4"
                        x:Name="EditUserButton"
                        Content="✏️ Редактировать"
                        Style="{StaticResource BaseButton}"
                        Width="160"
                        Height="36"
                        IsEnabled="False"
                        Click="EditUserButton_Click"/>

                <Button Grid.Column="6"
                        x:Name="DeleteUserButton"
                        Content="🗑️ Удалить"
                        Style="{StaticResource BaseButton}"
                        Width="140"
                        Height="36"
                        IsEnabled="False"
                        Click="DeleteUserButton_Click"/>
            </Grid>
        </Border>
        <!--#endregion-->
    </Grid>
</Page>